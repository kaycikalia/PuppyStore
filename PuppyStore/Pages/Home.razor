@page "/"
@using PuppyStore
@using System.Linq
@using PuppyStore.Client.Services
@inject PuppiesRepository Repo
@inject NavigationManager Nav
@inject FavoritesService Favorites

<section class="hero-carousel-two-col">

    <div class="carousel-left">

        <!-- Radios MUST be outside <ul> -->
        <input type="radio" name="radios" id="slide-1" checked />
        <input type="radio" name="radios" id="slide-2" />
        <input type="radio" name="radios" id="slide-3" />
        <input type="radio" name="radios" id="slide-4" />
        <input type="radio" name="radios" id="slide-5" />
        <input type="radio" name="radios" id="slide-6" />

        <div class="carousel">
            <ul class="slides">

                <li class="slide">
                    <img src="/carousel1.jpg" alt="Puppy 1" />
                    <div class="carousel-controls">
                        <label for="slide-3" class="prev-slide">&#x2039;</label>
                        <label for="slide-2" class="next-slide">&#x203A;</label>
                    </div>
                </li>

                <li class="slide">
                    <img src="/carousel2.jpg" alt="Puppy 2" />
                    <div class="carousel-controls">
                        <label for="slide-1" class="prev-slide">&#x2039;</label>
                        <label for="slide-3" class="next-slide">&#x203A;</label>
                    </div>
                </li>

                <li class="slide">
                    <img src="carousel3.jpg" alt="Puppy 3" />
                    <div class="carousel-controls">
                        <label for="slide-2" class="prev-slide">&#x2039;</label>
                        <label for="slide-4" class="next-slide">&#x203A;</label>
                    </div>
                </li>
                <li class="slide">
                    <img src="carousel4.jpg" alt="Puppy 4" />
                    <div class="carousel-controls">
                        <label for="slide-3" class="prev-slide">&#x2039;</label>
                        <label for="slide-5" class="next-slide">&#x203A;</label>
                    </div>
                </li>

                <li class="slide">
                    <img src="/carousel5.jpg" alt="Puppy 5" />
                    <div class="carousel-controls">
                        <label for="slide-4" class="prev-slide">&#x2039;</label>
                        <label for="slide-6" class="next-slide">&#x203A;</label>
                    </div>
                </li>

                <li class="slide">
                    <img src="carousel6.jpg" alt="Puppy 6" />
                    <div class="carousel-controls">
                        <label for="slide-5" class="prev-slide">&#x2039;</label>
                        <label for="slide-1" class="next-slide">&#x203A;</label>
                    </div>
                </li>
            </ul>

            <!-- Dots MUST also be outside <ul> -->
            <div class="carousel-dots">
                <label for="slide-1" class="carousel-dot"></label>
                <label for="slide-2" class="carousel-dot"></label>
                <label for="slide-3" class="carousel-dot"></label>
                <label for="slide-4" class="carousel-dot"></label>
                <label for="slide-5" class="carousel-dot"></label>
                <label for="slide-6" class="carousel-dot"></label>
            </div>

        </div>

    </div>

    <div class="hero-right hero-border-box">
        <h1>Welcome to Puppy Love!</h1>
        <p class="subheading">Find your new best friend today 🐶</p>

        <button class="cta-button"
                @onclick="@(() => Nav.NavigateTo("/AvailablePuppies"))">
            Browse Puppies
        </button>
    </div>

</section>

<div class="section-box about-page">

    <h2 class="about-title">About Puppy Love</h2>

    <p class="about-intro">
        Puppy Love was created with one big goal: spreading joy through wagging tails, tiny paws,
        and lifelong companionship. Our team is dedicated to raising happy, healthy pups who are
        ready to fill your home with love, laughter, and cuddles.
    </p>

    <h2 class="about-title">Meet Our Team 🐾</h2>

    <div class="staff-container">

        <div class="staff-card">
            <img src="/profile2.jpg" alt="Kayci" class="staff-photo" />
            <h3 class="staff-name">Kayci Spray</h3>
            <p class="staff-role">Founder & Website Creator</p>
            <p class="staff-desc">
                Kayci is the creator and developer behind this website. With a strong background in
                Computer Science and a passion for clean, user-friendly design, she built this
                platform from the ground up. Every page reflects her dedication to problem-solving,
                creativity, and crafting enjoyable digital experiences.
            </p>

        </div>

        <div class="staff-card">
            <img src="/headshot3.jpg" alt="Mark - Trainer" class="staff-photo" />
            <h3 class="staff-name">Mark Rivera</h3>
            <p class="staff-role">Head Trainer</p>
            <p class="staff-desc">
                Mark specializes in early socialization and beginner training. He helps each puppy
                build trust, learn basic manners, and feel confident meeting new people, kids, and other pets.
            </p>
        </div>

        <div class="staff-card">
            <img src="/headshot2.jpg" alt="Sarah - Vet" class="staff-photo" />
            <h3 class="staff-name">Sarah Kim</h3>
            <p class="staff-role">Veterinarian</p>
            <p class="staff-desc">
                Sarah ensures every puppy is healthy, safe, and ready for adoption. With her gentle care
                and expertise, each pup gets the best start in life — full of wellness, wiggles, and wags.
            </p>
        </div>

    </div>
    <button class="btn-primary" @onclick="@(() => Nav.NavigateTo("/about"))">
        Learn More →
    </button>

</div>

